@model StudentEnrollmentWebApp.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<h1 class ="pt-4">Delete</h1>

<h3>Are you sure you want to delete this student?</h3>
<div>
    <h4 class="pt-2">
        @Model.FullName
    </h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Email:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Phone Number:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            Gender:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class = "col-sm-2">
            Date of Birth:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class = "col-sm-2">
            Address:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            Course:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course)
        </dd>
        <dt class = "col-sm-2">
            Semester:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Semester)
        </dd>
        <dt class = "col-sm-2">
            Year Level:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YearLevel)
        </dd>
        <dt class = "col-sm-2">
            Section:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Section)
        </dd>
        <dt class="col-sm-2">
            Subject(s):
        </dt>
        @{
            List<string> subjList = Model.Subjects.Split(",").ToList();
            if (subjList.Count > 0)
            {
                <dd class="col-sm-10">
                    @subjList[0]
                </dd>
            }
            else
            {
                <dd class="col-sm-10">
                    None
                </dd>
            }

            for (int i = 1; i < subjList.Count; i++)
            {
                <dt class="col-sm-2"></dt>
                <dd class="col-sm-10">
                    @subjList[i]
                </dd>
            }
        }
        <dt class = "col-sm-2">
            Date Modified:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateModified)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-primary m-lg-1 m-md-1 m-sm-1">Back to List</a>
    </form>
</div>

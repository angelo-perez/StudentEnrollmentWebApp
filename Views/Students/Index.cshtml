@model IEnumerable<StudentEnrollmentWebApp.Models.Student>

@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Student List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Students" asp-action="Create">
                <i class="bi bi-plus-square"></i> Create New
            </a>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr class="text-center">
                <th class="text-white text-bg-primary">
                    No.
                </th>
                <th class="text-white text-bg-primary">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th class="text-white text-bg-primary">
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th class="text-white text-bg-primary">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th class="text-white text-bg-primary">
                    @Html.DisplayNameFor(model => model.Course)
                </th>
                <th class="text-white text-bg-primary">
                    @Html.DisplayNameFor(model => model.Semester)
                </th>
                <th class="text-white text-bg-primary">
                    @Html.DisplayNameFor(model => model.YearLevel)
                </th>
                <th class="text-white text-bg-primary">
                    @Html.DisplayNameFor(model => model.Section)
                </th>
                <th class="text-white text-bg-primary">
                    @Html.DisplayNameFor(model => model.DateModified)
                </th>
                <th class="text-white text-bg-primary">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                int n = 0;
                foreach (var item in Model) {
                    n++;
                    <tr>
                        <td class="text-primary text-center">
                            <b>@n</b>
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Semester)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.YearLevel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Section)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateModified)
                        </td>
                        <td>
                             <div class="d-flex align-items-center justify-content-center" style="height: 100%;">
                                <a asp-action="Details" asp-route-id="@item.Id" class="action-btn btn btn-primary mx-1">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="action-btn btn btn-dark mx-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="action-btn btn btn-danger mx-1">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
